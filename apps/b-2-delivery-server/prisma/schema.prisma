datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WebSocketConnection {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  connectionId String?
  status       String?
  message      String?
}

model Router {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isConnected    Boolean?
  routerName     String?
  macAddress     String?
  signalStrength Int?
}

model User {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String?
  lastName     String?
  username     String   @unique
  email        String?  @unique
  password     String
  roles        Json
  tonConnectId String?
  authStatus   Boolean?
}
